{
  "name": "ecommerce",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/pwa/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/ecommerce",
        "browser": "apps/pwa/src/main.ts",
        "polyfills": ["zone.js", "@angular/localize/init"],
        "tsConfig": "apps/pwa/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/pwa/public"
          }
        ],
        "styles": ["apps/pwa/src/styles.scss"],
        "outputMode": "static"
      },
      "configurations": {
        "development": {
          "sourceMap": true
        },
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "serviceWorker": "apps/pwa/ngsw-config.json",
          "fileReplacements": [
            {
              "replace": "apps/pwa/src/environments/environment.ts",
              "with": "apps/pwa/src/environments/environment.prod.ts"
            }
          ],
          "server": "apps/pwa/src/main.server.ts",
          "ssr": {
            "entry": "apps/pwa/src/server.ts"
          },
          "outputMode": "server",
          "prerender": {
            "discoverRoutes": false
          },
          "optimization": true
        },
        "production-browser": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "serviceWorker": "apps/pwa/ngsw-config.json",
          "fileReplacements": [
            {
              "replace": "apps/pwa/src/environments/environment.ts",
              "with": "apps/pwa/src/environments/environment.prod.ts"
            }
          ],
          "outputMode": "static",
          "optimization": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "ecommerce:build:production"
        },
        "development": {
          "buildTarget": "ecommerce:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "ecommerce:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/pwa/jest.config.ts",
        "tsConfig": "apps/pwa/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "ecommerce:build",
        "port": 4200,
        "staticFilePath": "dist/apps/ecommerce/browser",
        "spa": true
      }
    }
  }
}
